- content_for :toolbar do
  = link_to edit_document_path(@document ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Document.model_name.human)
  .panel-body
    = show_for @document do |s|
      = s.association :card
      = s.association :user
