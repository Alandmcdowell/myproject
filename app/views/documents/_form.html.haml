.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for(@document) do |f|
      = f.error_notification

      .form-inputs
        = f.association :card
        = f.input :file

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), documents_path, class: 'btn'
