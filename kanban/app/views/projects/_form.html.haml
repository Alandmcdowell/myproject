.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for(@project) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :description

        #tasks.panel.panel-default
          .panel-heading
            %i.icon-list.icon-large
            Lists
          .panel-body
            = f.simple_fields_for :lists do |list|
              = render 'list_fields', :f => list

            .links
              = link_to_add_association f, :lists do
                %i.icon-plus-sign
                Add list

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), projects_path, class: 'btn'
